{
  "name": "remind-code-typing-frontend",
  "version": "1.0.0",
  "description": "Frontend for RemindCodeTyping application",
  "main": "index.js",
  "scripts": {
    "build": "webpack --mode production",
    "build:dev": "webpack --mode development",
    "build:analyze": "webpack --mode production --env analyze",
    "dev": "webpack serve --mode development",
    "lint": "eslint Rct/js/**/*.js --fix",
    "lint:check": "eslint Rct/js/**/*.js",
    "format": "prettier --write \"Rct/**/*.{js,html,css}\"",
    "format:check": "prettier --check \"Rct/**/*.{js,html,css}\"",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:ci": "jest --coverage --ci --watchAll=false",
    "test:performance": "jest --testPathPattern=performance --verbose",
    "test:e2e": "cypress run",
    "test:e2e:open": "cypress open",
    "test:e2e:ci": "cypress run --browser chrome --headless",
    "quality:check": "npm run lint:check && npm run format:check",
    "quality:fix": "npm run lint && npm run format",
    "pre-commit": "npm run quality:check && npm run test:ci",
    "performance:analyze": "npm run build:analyze && open dist/bundle-analysis.html",
    "security:audit": "npm audit --audit-level=moderate",
    "security:fix": "npm audit fix",
    "security:check": "npm run security:audit && npm run deps:check",
    "deps:check": "npm outdated",
    "deps:update": "npm update",
    "build:stats": "webpack --mode production --json > webpack-stats.json",
    "ci:full": "npm run quality:check && npm run security:check && npm run test:ci && npm run build",
    "clean": "rimraf dist coverage .nyc_output webpack-stats.json",
    "validate": "npm run quality:check && npm run test:ci"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/preset-env": "^7.23.0",
    "@eslint/js": "^9.0.0",
    "autoprefixer": "^10.4.16",
    "babel-loader": "^9.1.3",
    "css-loader": "^6.8.1",
    "css-minimizer-webpack-plugin": "^5.0.1",
    "cssnano": "^6.0.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^27.6.3",
    "html-webpack-plugin": "^5.5.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "mini-css-extract-plugin": "^2.7.6",
    "postcss": "^8.4.31",
    "postcss-loader": "^7.3.3",
    "prettier": "^3.2.5",
    "style-loader": "^3.3.3",
    "terser-webpack-plugin": "^5.3.9",
    "webpack": "^5.89.0",
    "webpack-bundle-analyzer": "^4.9.1",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1",
    "cypress": "^13.6.0",
    "@cypress/code-coverage": "^3.12.0",
    "axe-core": "^4.8.0",
    "cypress-axe": "^1.5.0",
    "rimraf": "^5.0.5",
    "npm-check-updates": "^16.14.12",
    "license-checker": "^25.0.1",
    "bundlesize": "^0.18.1"
  },
  "dependencies": {
    "core-js": "^3.33.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "collectCoverageFrom": [
      "Rct/js/**/*.js",
      "!Rct/js/**/*.test.js",
      "!**/node_modules/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "testMatch": [
      "**/tests/**/*.test.js",
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ]
  },
  "bundlesize": [
    {
      "path": "dist/js/main.*.js",
      "maxSize": "150 kB"
    },
    {
      "path": "dist/js/vendors.*.js",
      "maxSize": "200 kB"
    },
    {
      "path": "dist/css/*.css",
      "maxSize": "50 kB"
    }
  ],
  "keywords": [
    "typing",
    "practice",
    "coding",
    "education"
  ],
  "author": "RCT Team",
  "license": "MIT"
}